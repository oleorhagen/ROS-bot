<?xml version="1.0"?>
<robot name="r2d2" xmlns:xacro="http://www.ros.org/wiki/xacro"  >

  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0" />
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0" />
  </material>

  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0" />
  </material>

  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0" />
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0" />
  </material>

  <material name="yellow">
    <color rgba="1.0 1.0 0.0 1.0" />
  </material>

  <!-- Not used yet -->
  <xacro:property name="body_xsize" value="0.5" />
  <xacro:property name="body_ysize" value="1.0" />
  <xacro:property name="body_zsize" value="0.3" />
  <xacro:property name="body_mass" value="2.0" />

  <link name="base_link" />

  <link name="chassis">
    <visual>
      <material name="black" />
      <geometry>
        <box size="0.5 1.0 0.3" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 1.0 0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0" />
      <inertia ixx="${(1/12)*2*(1*1 + 0.3*0.3)}"     ixy="0.0"   ixz="0.0" iyy="${(1/12)*2*(0.5*0.5 + 0.3*0.3)}" iyz="0.0" izz="${(1/12)*2*(0.5*0.5 + 1*1)}" />
    </inertial>
  </link>

  <joint name="chassis_to_base_link" type="fixed">
    <parent link="base_link" />
    <child link="chassis" />
  </joint>

  <link name="front_steer_bar" >
    <visual>
      <material name="yellow"/>
      <origin rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.1" radius="0.01" />
      </geometry>
    </visual>
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint_front_steer_bar" type="revolute">
    <parent link="chassis" />
    <child link="front_steer_bar" />
    <limit lower="-0.3" upper="0.3" effort="100" velocity="10" />
    <origin xyz="0.0 0.40 0.0" />
    <axis xyz="0 0 1" />
  </joint>

  <link name="back_suspension" >
    <visual>
      <material name="white"/>
      <origin xyz="0 -0.4 0.0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.7" radius="0.1" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 -0.4 0.0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.7" radius="0.1" />
      </geometry>
    </collision>
  </link>

  <joint name="back_suspension_to_base_link" type="fixed">
    <parent link="chassis" />
    <child link="back_suspension" />
  </joint>


  <link name="front_wheel" >
    <visual>
      <material name="yellow"/>
      <origin xyz="0.0 0.0 0.0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.1" radius="0.2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.1" radius="0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2" />
      <inertia ixx="${(1/12)*0.2*(3*0.2*0.2 + 0.1*0.1)}"     ixy="0.0"   ixz="0.0" iyy="${(1/12)*0.2*(3*0.2*0.2 + 0.1*0.1)}" iyz="0.0" izz="${(1/12)*0.2*(0.2*0.2)}" />
    </inertial>
  </link>

  <joint name="joint_front_wheel" type="continuous">
    <parent link="front_steer_bar" />
    <child link="front_wheel" />
    <origin xyz="0.0 0.0 0.0" />
    <axis xyz="1 0 0"/>
    <!-- The front-wheels should not produce any torque whatsoever -->
    <limit lower="-0.3" upper="0.3" effort="0.0" velocity="10" />
  </joint>
  

  <link name="right_back_wheel" >
    <visual>
      <material name="red"/>
      <origin xyz="0 0 0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.1" radius="0.2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.1" radius="0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2" />
      <inertia ixx="${(1/12)*0.2*(3*0.2*0.2 + 0.1*0.1)}"     ixy="0.0"   ixz="0.0" iyy="${(1/12)*0.2*(3*0.2*0.2 + 0.1*0.1)}" iyz="0.0" izz="${(1/12)*0.2*(0.2*0.2)}" />
    </inertial>
  </link>

  <joint name="joint_right_back_wheel" type="continuous">
    <parent link="chassis" />
    <child link="right_back_wheel" />
    <origin xyz="0.35 -0.4 0" />
    <axis xyz="1 0 0"/>
  </joint>


  <link name="left_back_wheel" >
    <visual>
      <material name="red"/>
      <origin xyz="0 0 0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.1" radius="0.2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 ${pi/2} 0" />
      <geometry>
        <cylinder length="0.1" radius="0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2" />
      <inertia ixx="${(1/12)*0.2*(3*0.2*0.2 + 0.1*0.1)}"     ixy="0.0"   ixz="0.0" iyy="${(1/12)*0.2*(3*0.2*0.2 + 0.1*0.1)}" iyz="0.0" izz="${(1/12)*0.2*(0.2*0.2)}" />
    </inertial>
  </link>

  <joint name="joint_left_back_wheel" type="continuous">
    <parent link="chassis" />
    <child link="left_back_wheel" />
    <origin xyz="-0.35 -0.4 0" />
    <axis xyz="1 0 0"/>
  </joint>

  <!-- -\-\-\- -->
  <!-- Sensors -->
  <!-- -\-\-\- -->

  <!-- Camera -->
  <link name="camera_box" >
    <visual>
      <material name="blue" />
      <geometry>
        <box size="0.05 0.05 0.05" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.05" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1" />
      <inertia ixx="${(1/12)*0.1*(3*0.05*0.05 + 0.05*0.05)}"     ixy="0.0"   ixz="0.0" iyy="${(1/12)*0.1*(3*0.05*0.05 + 0.05*0.05)}" iyz="0.0" izz="${(1/12)*0.1*(0.05*0.05)}" />
    </inertial>
  </link>

  <joint name="joint_camera_box" type="fixed">
    <origin xyz="0 0.5 0" rpy="0 0 ${pi/2}" />
    <parent link="chassis" />
    <child link="camera_box" />
  </joint>

  <!-- Lidar -->
  <link name="lidar_cylinder">
    <visual>
      <!-- <origin xyz="0 0 0.15" /> -->
      <material name="green" />
      <geometry>
        <cylinder length="0.2" radius="0.1" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder length="0.2" radius="0.1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2" />
      <inertia ixx="${(1/12)*0.2*(3*0.1*0.1 + 0.1*0.1)}"     ixy="0.0"   ixz="0.0" iyy="${(1/12)*0.2*(3*0.1*0.1 + 0.1*0.1)}" iyz="0.0" izz="${(1/12)*0.2*(0.1*0.1)}" />
    </inertial>
  </link>

  <joint name="joint_lidar_cylinder" type="fixed">
    <origin xyz="0 0 0.3" />
    <parent link="chassis" />
    <child link="lidar_cylinder" />
  </joint>

</robot>
